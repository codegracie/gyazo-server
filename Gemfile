source :rubygems

gem 'rails', '3.2.9'
gem 'rmagick', :require => 'RMagick'

group :assets do
  gem 'sass-rails', '~> 3.2.3'
  gem 'therubyracer', '~> 0.11.0'
  gem 'libv8', '~> 3.11.8'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'growl'
  gem 'guard-livereload'
  gem 'guard-rspec'
  gem 'pry-rails'
end

group :development, :test do
  gem 'rspec-rails'
end

